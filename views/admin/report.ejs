<%- include('../layouts/admin-header') %>



    <section class="content-main">
        <div class="content-header">
     
            <div>
                <h2 class="content-title card-title">Sales Report </h2>
                <!-- <input type="button" id="create_pdf" value="Generate PDF">   -->
                <button type="button" class="btn btn-primary" id="create_pdf" value="Generate PDF" >Export To PDF</button>
                <button type="button" onclick="ExportToExcel('csv')" class="btn btn-primary">Export To CSV</button>
                <button onclick="ExportToExcel('xlsx')" class="btn btn-primary">Export table to excel</button>

                

            </div> 




        </div>

        <div class="card mb-4">

            <div class="card-body">
                <div class="table-responsive">

                    <form class="form">
                    
                        <table class="table table-hover"  id="tbl_exporttable_to_xls">

                            <thead>

                                <tr>
                                    <th scope="col">#</th>
                                    <th>Order ID</th>
                                    <th scope="col">Products</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Payment Status</th>
                                    <th scope="col">Payment Method</th>


                                </tr>
                            </thead>
                            <tbody>

                                <% let x=1 %>
                                <% let dummyId=329645 %>
                                    <% response.forEach(element=> { %>


                                        <tr>
                                            <td>
                                                <%=x++ %>
                                            </td>
                                            <td>
                                                <%=dummyId++ %>
                                            </td>
                                           <td>title</td>
                                           
                                            <% let date=element.date+"" %>
                                                <td>
                                                    <%=date.substring(0,16) %>
                                                </td>
                                                <td>
                                                    <%=element.total_amount %>
                                                </td>
                                                <td>
                                                    <%=element.payment_status %>
                                                </td>
                                                <td>
                                                    <%=element.payment_method %>
                                                </td>





                                        </tr>
                                      

                                        <% }) %>

                                    </tbody>  
                                </table><br>  
                                
                            </form>  


                        


                </div> <!-- table-responsive //end -->
            </div> <!-- card-body end// -->
        </div> <!-- card end// -->

    </section>


   
